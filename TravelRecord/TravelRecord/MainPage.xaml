<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:TravelRecord"
             x:Class="TravelRecord.MainPage">

    <StackLayout VerticalOptions="Center" Margin="25">
        <Entry x:Name="Username" Placeholder="Username" Keyboard="Email" TextColor="{StaticResource blueColor}"></Entry>
        <Entry x:Name="Password" Placeholder="Password" IsPassword="True" TextColor="{StaticResource blueColor}"></Entry>
        <Button x:Name="LoginButton" Clicked="LoginButton_Clicked" Text="Log in" Margin="0, 50, 0, 0" Style="{StaticResource default}"></Button>
    </StackLayout>

</ContentPage>
